<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nanobot Gateway Monitor</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="aurora-bg">
        <div class="aurora aurora-1"></div>
        <div class="aurora aurora-2"></div>
        <div class="aurora aurora-3"></div>
    </div>

    <div class="container">
        <header class="dashboard-header">
            <div class="header-content">
                <div class="logo-section">
                    <div class="logo-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3"/>
                            <path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/>
                        </svg>
                    </div>
                    <h1>Nanobot Gateway Monitor</h1>
                </div>
                <div class="clock-section">
                    <div class="live-clock">
                        <span id="clock-time">00:00:00</span>
                        <span id="clock-date">Loading...</span>
                    </div>
                    <div class="online-status">
                        <span class="pulse-dot"></span>
                        <span class="status-text">LIVE</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="dashboard-content">
            <!-- Status Cards Grid -->
            <section class="cards-section">
                <div class="cards-grid">
                    <!-- System Status Card -->
                    <div class="glass-card status-card">
                        <div class="card-header">
                            <div class="card-icon system-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="2" y="2" width="20" height="8" rx="2"/>
                                    <rect x="2" y="14" width="20" height="8" rx="2"/>
                                </svg>
                            </div>
                            <h3>System Status</h3>
                        </div>
                        <div class="card-body">
                            <div class="status-value" id="system-status">Operational</div>
                            <div class="status-indicator online">
                                <span class="pulse-dot"></span>
                                Online
                            </div>
                            <div class="metric-row">
                                <span class="metric-label">Uptime</span>
                                <span class="metric-value" id="uptime">46d 12h 34m</span>
                            </div>
                        </div>
                    </div>

                    <!-- LLM Provider Card -->
                    <div class="glass-card status-card">
                        <div class="card-header">
                            <div class="card-icon llm-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                                    <path d="M2 17l10 5 10-5"/>
                                    <path d="M2 12l10 5 10-5"/>
                                </svg>
                            </div>
                            <h3>LLM Provider</h3>
                        </div>
                        <div class="card-body">
                            <div class="status-value" id="llm-provider">Anthropic</div>
                            <div class="status-indicator online">
                                <span class="pulse-dot"></span>
                                Active
                            </div>
                            <div class="metric-row">
                                <span class="metric-label">Model</span>
                                <span class="metric-value" id="llm-model">Claude 3.5</span>
                            </div>
                        </div>
                    </div>

                    <!-- API Connection Card -->
                    <div class="glass-card status-card">
                        <div class="card-header">
                            <div class="card-icon api-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                                    <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                                </svg>
                            </div>
                            <h3>API Connection</h3>
                        </div>
                        <div class="card-body">
                            <div class="status-value" id="api-status">Connected</div>
                            <div class="status-indicator online">
                                <span class="pulse-dot"></span>
                                Stable
                            </div>
                            <div class="metric-row">
                                <span class="metric-label">Latency</span>
                                <span class="metric-value" id="latency">45ms</span>
                            </div>
                        </div>
                    </div>

                    <!-- Memory Usage Card -->
                    <div class="glass-card status-card">
                        <div class="card-header">
                            <div class="card-icon memory-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 2a10 10 0 1 0 10 10H12V2z"/>
                                    <path d="M12 2a10 10 0 0 1 10 10"/>
                                </svg>
                            </div>
                            <h3>Memory Usage</h3>
                        </div>
                        <div class="card-body">
                            <div class="status-value" id="memory-percent">67%</div>
                            <div class="memory-bar">
                                <div class="memory-fill" id="memory-fill" style="width: 67%"></div>
                            </div>
                            <div class="metric-row">
                                <span class="metric-label">Used</span>
                                <span class="metric-value" id="memory-used">2.68 GB</span>
                            </div>
                            <div class="metric-row">
                                <span class="metric-label">Total</span>
                                <span class="metric-value">4 GB</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Activity Log Section -->
            <section class="activity-section">
                <div class="glass-card activity-card">
                    <div class="card-header">
                        <h3>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                                <polyline points="14 2 14 8 20 8"/>
                                <line x1="16" y1="13" x2="8" y2="13"/>
                                <line x1="16" y1="17" x2="8" y2="17"/>
                                <polyline points="10 9 9 9 8 9"/>
                            </svg>
                            Activity Log
                        </h3>
                        <button class="clear-btn" id="clear-log">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                            </svg>
                        </button>
                    </div>
                    <div class="activity-log" id="activity-log">
                        <div class="log-entry">
                            <span class="log-time">16:03:45</span>
                            <span class="log-badge info">INFO</span>
                            <span class="log-message">Dashboard initialized successfully</span>
                        </div>
                        <div class="log-entry">
                            <span class="log-time">16:03:42</span>
                            <span class="log-badge success">SUCCESS</span>
                            <span class="log-message">API connection established</span>
                        </div>
                        <div class="log-entry">
                            <span class="log-time">16:03:38</span>
                            <span class="log-badge info">INFO</span>
                            <span class="log-message">Loading LLM configuration...</span>
                        </div>
                        <div class="log-entry">
                            <span class="log-time">16:03:35</span>
                            <span class="log-badge success">SUCCESS</span>
                            <span class="log-message">System operational</span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Metrics Section -->
            <section class="metrics-section">
                <div class="cards-grid small">
                    <div class="glass-card quick-stat">
                        <div class="stat-label">Requests/min</div>
                        <div class="stat-value" id="requests-per-min">1,247</div>
                        <div class="stat-trend up">+12% ↑</div>
                    </div>
                    <div class="glass-card quick-stat">
                        <div class="stat-label">Avg Response</div>
                        <div class="stat-value" id="avg-response">142ms</div>
                        <div class="stat-trend down">-8% ↓</div>
                    </div>
                    <div class="glass-card quick-stat">
                        <div class="stat-label">Active Sessions</div>
                        <div class="stat-value" id="active-sessions">8</div>
                        <div class="stat-trend neutral">0%</div>
                    </div>
                    <div class="glass-card quick-stat">
                        <div class="stat-label">Error Rate</div>
                        <div class="stat-value" id="error-rate">0.02%</div>
                        <div class="stat-trend down">-0.01% ↓</div>
                    </div>
                </div>
            </section>
        </main>

        <footer class="dashboard-footer">
            <p>Nanobot Gateway Monitor v1.0 | <span id="footer-time"></span></p>
        </footer>
    </div>

    <script src="script.js"></script>
</body>
</html>
